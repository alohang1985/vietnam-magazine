# Strapi CMS environment example
CMS_URL=http://localhost:1337  # Strapi base URL
CMS_ADMIN_TOKEN=your_strapi_admin_token_here  # Required for scripts that call CMS API
SITE_BASE_URL=http://localhost:3000  # Public site URL for sitemap

# Image APIs (Optional but used for hero/section images)
UNSPLASH_API_KEY=your_unsplash_api_key
PEXELS_API_KEY=your_pexels_api_key

# Search API (SerpAPI) - fallback for web search
SEARCH_API_KEY=your_serpapi_api_key

# OpenAI for extraction & generation
OPENAI_API_KEY=your_openai_api_key
OPENAI_RATE_LIMIT=60   # calls per minute
OPENAI_TIMEOUT_MS=30000

# Scheduler / Publish
PUBLISH_TIME=09:30
TIMEZONE=Asia/Ho_Chi_Minh

# Notes:
# - Do NOT commit real API keys. Use local .env or CI secrets.
# - CMS_ADMIN_TOKEN: create in Strapi Admin > Settings > API Tokens (full access for scripts)
