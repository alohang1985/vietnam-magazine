{
  "routes": [
    {
      "method": "GET",
      "path": "/posts",
      "handler": "api::post.post.find",
      "config": { "policies": [] }
    },
    {
      "method": "GET",
      "path": "/posts/:id",
      "handler": "api::post.post.findOne",
      "config": { "policies": [] }
    },
    {
      "method": "POST",
      "path": "/posts",
      "handler": "api::post.post.create",
      "config": { "policies": [] }
    },
    {
      "method": "PUT",
      "path": "/posts/:id",
      "handler": "api::post.post.update",
      "config": { "policies": [] }
    },
    {
      "method": "DELETE",
      "path": "/posts/:id",
      "handler": "api::post.post.delete",
      "config": { "policies": [] }
    },
    {
      "method": "PUT",
      "path": "/posts/:id/publish",
      "handler": "api::post.post.publish",
      "config": { "policies": [] }
    }
  ]
}
